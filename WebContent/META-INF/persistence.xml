<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
						http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="siwclinica" transaction-type="RESOURCE_LOCAL"> <!-- siwclinica è il nome della persistence unit utilizzata -->
		<class>it.uniroma3.db.models.Amministratore.java</class>
		<class>it.uniroma3.db.models.Esame.java</class>
		<class>it.uniroma3.db.models.Medico.java</class>
		<class>it.uniroma3.db.models.Paziente.java</class>
		<class>it.uniroma3.db.models.Requisito.java</class>
		<class>it.uniroma3.db.models.RisultatoEsame.java</class>
		<class>it.uniroma3.db.models.TipologiaEsame.java</class>
		<properties>
			<property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver" />
			<property name="openjpa.ConnectionUserName" value="postgres" />
			<property name="openjpa.ConnectionPassword" value="xxx" />
			<property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/clinica" /> <!-- clinica è l'alias del db utilizzato -->
			<property name="openjpa.jdbc.DBDictionary" value="postgres" />
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(SchemaAction=add,SchemaAction=deleteTableContents,ForeignKeys=true)" /> <!-- SchemaAction=deleteTableContents serve solo al testing -->
			<property name="openjpa.Log" value="DefaultLevel=WARN, Tool=INFO" />
		</properties>
	</persistence-unit>
</persistence>